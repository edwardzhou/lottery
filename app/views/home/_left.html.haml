%table.Tab_backdrop{:border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :width => "245"}
  %tbody
    %tr
      %td.Left_Place{:valign => "top"}
        %table.t_list{:border => "0", :cellpadding => "0", :cellspacing => "1", :width => "210"}
          %tbody
            %tr
              %td.t_list_caption{:colspan => "2"} 請覈對您的帳戶
            %tr
              %td.t_td_caption_1{:width => "96"}
                會員帳戶
              %td.t_td_text{:width => "137"}
                #user_account
                  = username_with_level(current_user)

            %tr
              %td.t_td_caption_1
                信用額度
              %td.t_td_text
                #total_credit
                  //= number_to_currency(current_user.total_credit, :format => "%n", :precision => 0 )
                  = number_with_delimiter(current_user.total_credit)
            %tr
              %td.t_td_caption_1
                可用金額
              %td.t_td_text
                #available_credit
                  //= number_to_currency(current_user.available_credit, :format => "%n", :precision => 0 )
                  = number_with_delimiter(current_user.available_credit)
        %br/

        - if current_user.is_admin?
          %table.t_list{:border => "0", :cellpadding => "0", :cellspacing => "1", :width => "210"}
            %tbody
              %tr
                %td
                  = link_to "進入後台管理", admin_users_path
        - elsif current_user.is_agent?
          %table.t_list{:border => "0", :cellpadding => "0", :cellspacing => "1", :width => "210"}
            %tbody
              %tr
                %td
                  = link_to "進入後台管理", agent_users_path
        %br/

